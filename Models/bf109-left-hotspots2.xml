<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<!-- This part should be the same for any 3D panel.  Customize the actions section -->
<PropertyList>

 <name>Bf109 left Hotspots</name>
 <background>Aircraft/bf109/Models/transparent-bg.rgb</background>
 <w>256</w>
 <h>512</h>
 <y-offset>0</y-offset>

 <instruments>
   <instrument>
   <name>left</name>
   <x>0</x>
   <y>0</y>
   <w>256</w>
   <h>512</h>
   <w-base>256</w-base>
   <h-base>512</h-base>

 <layers>
  <layer>
   <name>background</name>
   <texture>
<!--
     <path>Aircraft/p51d/Models/hotspotgrid.rgb</path>
-->
     <path>Aircraft/bf109/Models/transparent-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
  </layer>
 </layers>

<!-- define hotspot actions below -->

 <actions>

  <action>
   <name>throttle back</name>
   <button>0</button>
   <x>50</x>
   <y>85</y>
   <w>55</w>
   <h>70</h>
   <binding>
    <command>property-adjust</command>
    <property>controls/engines/engine[0]/throttle</property>
    <step>-0.1</step>
    <min>0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>
  <!-- flap up -->
  <action>
   <name>throttle forward</name>
   <button>0</button>
   <x>50</x>
   <y>155</y>
   <w>55</w>
   <h>70</h>
   <binding>
    <command>property-adjust</command>
    <property>controls/engines/engine[0]/throttle</property>
    <step>0.1</step>
    <min>0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <action>
   <name>fuel selector down</name>
   <button>0</button>
   <x>105</x>
   <y>85</y>
   <w>55</w>
   <h>70</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/fuel/switch-position</property>
    <step>-1.0</step>
    <min>-1.0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>
  
  <action>
   <name>fuel selector up</name>
   <button>0</button>
   <x>105</x>
   <y>155</y>
   <w>55</w>
   <h>70</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/fuel/switch-position</property>
    <step>1.0</step>
    <min>-1.0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>
</actions>

  </instrument>
 </instruments>

</PropertyList>



