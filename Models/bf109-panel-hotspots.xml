    <step>-5</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name></name>
   <button>0</button>
   <x>-110</x>
   <y>-45</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/magnetic-compass/bookmark-heading-deg</property>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-110</x>
   <y>-45</y>
   <w>20</w>
   <h>32</h>
