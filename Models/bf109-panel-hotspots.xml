  </action>



  <!-- ingition switch hotspots -->
  <action>
   <name>switch up</name>
   <button>0</button>
   <x>-480</x>
   <y>25</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/engines/engine[0]/magnetos</property>
    <step>1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>switch down</name>
   <button>0</button>
   <x>-480</x>
   <y>-140</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/engines/engine[0]/magnetos</property>
    <step>-1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
  </action>
  <!-- Starter Handle -->
  <action>
   <name>starter</name>
   <button>0</button>
   <x>-465</x>
   <y>-200</y>
   <w>85</w>
   <h>50</h>
    <binding>
     <command>nasal</command>
     <script>bf109.starter(1)</script>
    </binding>
    <mod-up>
     <binding>
       <command>nasal</command>
       <script>bf109.starter(0)</script>
     </binding>
    </mod-up>
  </action>

  <!-- gear switch hotspots -->
  <action>
   <name>gear up</name>
   <button>0</button>
   <x>-355</x>
   <y>-250</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/gear/gear-down</property>
    <step>-1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>gear down</name>
   <button>0</button>
   <x>-355</x>
   <y>-315</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/gear/gear-down</property>
    <step>1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>

<!-- master arm switch hotspots -->
  <action>
   <name>master arm on</name>
   <button>0</button>
   <x>-200</x>
   <y>430</y>
   <w>35</w>
   <h>35</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/armament/master-arm</property>
    <step>1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>master arm off</name>
   <button>0</button>
   <x>-200</x>
   <y>360</y>
   <w>35</w>
   <h>35</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/armament/master-arm</property>
    <step>-1</step>
    <min>0</min>
    <max>1</max>
    <wrap>0</wrap>
   </binding>
  </action>

<!--Revi swing -->
  <action>
   <name>revi</name>
   <button>0</button>
   <x>-20</x>
   <y>350</y>
   <w>160</w>
   <h>120</h>
   <binding>
    <command>nasal</command>
    <script>bf109.toggle_revi()</script>
   </binding>
  </action>

