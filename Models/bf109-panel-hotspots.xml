<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<!-- This part should be the same for any 3D panel.  Customize the actions section -->
<PropertyList>

 <name>Bf109 Panel Hotspots</name>
 <background>Aircraft/bf109/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments>
  <instrument>

   <name>front panel</name>
   <x>512</x>
   <y>384</y>
   <w>1024</w>
   <h>768</h>
   <w-base>1024</w-base>
   <h-base>1024</h-base>


 <layers>
  <layer>
   <name>background</name>
   <texture>
<!--
     <path>Aircraft/p51d/Models/hotspotgrid.rgb</path>
-->
     <path>Aircraft/bf109/Models/transparent-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
  </layer>
 </layers>

<!-- define hotspot actions below -->

 <actions>

  <!-- attitude indicator 
  <action>
   <name></name>
   <button>0</button>
   <x>95</x>
   <y>100</y>
   <w>60</w>
   <h>52</h>
   <binding>
    <command>property-toggle</command>
    <property>/instrumentation/attitude-indicator/serviceable</property>
   </binding>
  </action>
-->
  <!-- gyro compass hotspots -->
  <action>
   <name></name>
   <button>0</button>
   <x>-190</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-190</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>-5</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name></name>
   <button>0</button>
   <x>-170</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-170</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>5</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <!-- remote compass hotspots -->
  <action>
   <name></name>
   <button>0</button>
   <x>-90</x>
   <y>-45</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/magnetic-compass/bookmark-heading-deg</property>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-90</x>
   <y>-45</y>
   <w>20</w>
   <h>32</h>
   <binding>
